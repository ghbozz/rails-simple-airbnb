<div class="container">
  <h1>All our Flats (<%= @flats.length %>)</h1>
  <ul class="list-unstyled">
    <% @flats.each do |flat| %>
      <li>
        <div id="cards-container" class="col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=flat.image_url%>);">
            <div class="card-category">Popular</div>
              <div class="card-description">
                <h2><%= flat.name %></h2>
                <p><%= flat.description %></p>
              </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <%= link_to 'More Infos', flat_path(flat), { :class=>"btn btn-primary card-btn" } %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
