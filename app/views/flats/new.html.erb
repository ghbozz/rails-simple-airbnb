<div class="container">

  <h1>Flat#new</h1>
  <p>Find me in app/views/flats/new.html.erb</p>

  <%= simple_form_for @flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :image_url %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit "add a flat", class: "btn btn-primary" %>
  <% end %>

</div>
